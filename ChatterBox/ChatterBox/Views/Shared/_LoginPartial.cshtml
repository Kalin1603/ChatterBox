@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var profilePictureUrl = currentUser?.ProfilePictureURL ?? "/default-avatar.png";
}

@if (SignInManager.IsSignedIn(User))
{
    <!-- Notification -->
    @await Component.InvokeAsync("Notifications")

    <!-- Profile menu -->
    <div class="relative group">
        <button class="rounded-full relative bg-gray-800 hover:bg-gray-700 transition-all cursor-pointer border-2 border-transparent hover:border-gray-600 focus:ring-2 focus:ring-sky-500">
            <img src="@profilePictureUrl"
                 class="sm:w-9 sm:h-9 w-7 h-7 rounded-full shadow object-cover border-2 border-white/80 hover:scale-105 transition-transform" />
        </button>

        <div class="hidden bg-gray-800 pr-1.5 rounded-xl shadow-xl md:w-[200px] w-64 border border-gray-700 z-[150]"
             uk-drop="offset:6;pos: bottom-right; mode: click; animate-out: true;">
            <div class="flex flex-col p-2 space-y-1.5">

                <!-- My Profile -->
                <a asp-controller="Profile" asp-action="Details" asp-route-id="@currentUser.Id"
                   class="flex items-center gap-3 px-3 py-2 text-sm text-gray-300 hover:bg-gray-700 rounded-lg transition-all hover:translate-x-1.5">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                        <circle cx="12" cy="7" r="4" />
                        <path d="M16 19h6m-3-3v6" />
                    </svg>
                    My Profile
                </a>

                <!-- Profile settings -->
                <a asp-area="Identity" asp-page="/Account/Manage/Index"
                   class="flex items-center gap-3 px-3 py-2 text-sm text-gray-300 hover:bg-gray-700 rounded-lg transition-all hover:translate-x-1.5">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="3.5" />
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                    </svg>
                    Profile settings
                </a>

                <!-- Logout -->
                <form asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit"
                            class="w-full flex items-center gap-3 px-3 py-2 text-sm text-red-400 hover:bg-red-500/10 rounded-lg transition-all hover:translate-x-1.5">
                        <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                            <path d="M16 17l5-5-5-5" />
                            <path d="M21 12H9" />
                        </svg>
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </div>
}

else
{
    <div class="flex items-center gap-3 sm:gap-4">
        <!-- Register Button -->
        <a asp-area="Identity" asp-page="/Account/Register"
           class="flex items-center gap-2 bg-sky-500 hover:bg-sky-600 border border-sky-500/30 text-white px-4 py-2.5 sm:px-5 sm:py-3 rounded-lg text-sm font-medium transition-all hover:scale-[1.02] active:scale-95 shadow-sm hover:shadow-sky-500/30 group">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 opacity-90 group-hover:opacity-100 transition-opacity"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="1.8"
                 viewBox="0 0 24 24">
                <path stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
            </svg>
            <span class="mt-0.5">Register</span>
        </a>

        <!-- Login Button -->
        <a asp-area="Identity" asp-page="/Account/Login"
           class="flex items-center gap-2 border border-gray-600 hover:border-sky-500 bg-gray-800 hover:bg-gray-750 text-gray-300 hover:text-sky-400 px-4 py-2.5 sm:px-5 sm:py-3 rounded-lg text-sm font-medium transition-all hover:scale-[1.02] active:scale-95 shadow-sm hover:shadow-sky-500/20 group">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 opacity-90 group-hover:opacity-100 transition-opacity"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="1.8"
                 viewBox="0 0 24 24">
                <path stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
            </svg>
            <span class="mt-0.5">Login</span>
        </a>
    </div>
}
