<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Header Example</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>

<header class="fixed top-0 left-0 z-[100] w-full h-[--m-top]" 
        x-data="{ mobileSearchOpen: false }"
        x-on:keydown.escape.window="mobileSearchOpen = false">

    <!-- Main Header Bar -->
    <div class="flex items-center w-full h-full px-4 bg-slate-900/70 backdrop-blur-xl border-b border-slate-800">

        <div class="flex items-center gap-3">
            <!-- Sidebar Toggle -->
            <button uk-toggle="target: #site__sidebar ; cls :!-translate-x-0"
                    class="xl:hidden flex items-center justify-center w-8 h-8 rounded-full hover:bg-slate-700/80 transition-colors">
                <ion-icon name="menu-outline" class="text-white text-2xl"></ion-icon>
            </button>

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="shrink-0">
                <div class="flex items-center">
                    <img src="~/images/logo.png" class="w-8 rounded-md md:block" alt="Logo" />
                    <span class="hidden ml-3 text-lg font-bold text-white md:block">ChatterBox</span>
                </div>
            </a>
        </div>

        <!-- Desktop Search Bar -->
        <div class="flex-1 max-w-xl mx-auto px-4">
            <form id="search--box-desktop" method="get" action="/Home/Search" class="hidden md:block">
                <div class="relative">
                    <input type="text" name="query" placeholder="Search ChatterBox" class="w-full !pl-11 h-10 !bg-slate-800 !text-white !border-0 !rounded-full focus:!ring-2 focus:!ring-sky-500 transition">
                </div>
            </form>
        </div>

        <!-- Right-side Icons & Actions -->
        <div class="flex items-center gap-2 text-white shrink-0">
            <!-- Mobile Search Toggle -->
            <button x-on:click="mobileSearchOpen = !mobileSearchOpen" type="button" class="md:hidden flex items-center justify-center w-8 h-8 rounded-full hover:bg-slate-700/80 transition-colors">
                <ion-icon name="search-outline" class="text-2xl"></ion-icon>
            </button>

            <!-- User Actions (Login/Profile, etc.) -->
            <partial name="_LoginPartial"></partial> 
        </div>
    </div>

    <!-- Mobile Search Form (Overlay) -->
    <div class="absolute top-0 left-0 w-full h-[--m-top] bg-slate-900 border-b border-slate-800"
         x-show="mobileSearchOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 -translate-y-4"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 -translate-y-4"
         style="display: none;"
         x-cloak>
         
        <form id="search--box-mobile" method="get" action="/Home/Search" class="flex items-center w-full h-full px-4">
            <input type="text" name="query" placeholder="Search anything..." class="w-full h-full text-lg bg-transparent text-white border-none focus:ring-0">
            <button x-on:click="mobileSearchOpen = false" type="button" class="flex items-center justify-center w-8 h-8 text-white">
                <ion-icon name="close-outline" class="text-3xl"></ion-icon>
            </button>
        </form>
    </div>

</header>
</body>
</html>
