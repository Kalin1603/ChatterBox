<header class="z-[100] h-[--m-top] fixed top-0 left-0 w-full flex items-center bg-gray-900/80 backdrop-blur-xl border-b border-slate-700">
    <div class="2xl:w-[--w-side] lg:w-[--w-side-sm]">
        <div class="flex items-center gap-1">
            <button uk-toggle="target: #site__sidebar ; cls :!-translate-x-0"
                    class="flex items-center justify-center w-8 h-8 text-xl rounded-full hover:bg-gray-700 xl:hidden group">
                <ion-icon name="menu-outline" class="text-2xl group-aria-expanded:hidden"></ion-icon>
                <ion-icon name="close-outline" class="hidden text-2xl group-aria-expanded:block"></ion-icon>
            </button>
            <div id="logo" class="flex items-center">
                <a class="flex items-center">
                    <img src="~/images/logo.png" class="w-10 md:block hidden rounded" />
                    <span class="ml-2 text-white">ChatterBox</span>
                </a>
            </div>
        </div>
    </div>
    <div class="flex-1 relative">
        <div class="max-w-[1220px] mx-auto flex items-center">
            <form id="search--box"
                  class="xl:w-[680px] sm:w-96 sm:relative rounded-xl overflow-hidden z-20 bg-gray-800 max-md:hidden w-screen left-0 max-sm:fixed max-sm:top-2 border border-gray-200 rounded-lg">
                <ion-icon name="search" class="absolute left-4 top-1/2 -translate-y-1/2 text-white"></ion-icon>
                <input type="text" name="query" placeholder="Search Posts, Friends..." class="w-full !pl-10 !font-normal !bg-transparent h-12 !text-sm text-white border-none rounded-lg" />
            </form>
        </div>
        <div class="max-w-[1220px] mx-auto flex items-center">
            <div class="flex items-center sm:gap-4 gap-2 absolute right-5 top-1/2 -translate-y-1/2 text-white">
                <button type="button" class="sm:p-2 p-1 rounded-full relative sm:bg-gray-800">
                    <svg fill="currentColor" width="24" height="24" viewBox="-3 -2 24 24" xmlns="http://www.w3.org/2000/svg" class="jam jam-bell">
                        <path d="M13.666 11.782L13 11.186V6a4 4 0 1 0-8 0v5.186l-.666.596A6.987 6.987 0 0 0 2.29 15h13.42a6.987 6.987 0 0 0-2.044-3.218zM12 17a3 3 0 0 1-6 0H0a8.978 8.978 0 0 1 3-6.708V6a6 6 0 1 1 12 0v4.292A8.978 8.978 0 0 1 18 17h-6zm-3 1a1 1 0 0 0 1-1H8a1 1 0 0 0 1 1z" />
                    </svg>
                    <div class="absolute top-0 right-0 -m-1 bg-red-600 text-white text-xs px-1 rounded-full" id="notificationsCount">0</div>
                </button>

                <div class="hidden bg-gray-800 pr-1.5 rounded-lg drop-shadow-xl md:w-[365px] w-screen border2" uk-drop="offset:6;pos: bottom-right; mode: click; animate-out: true;">
                    <div class="flex items-center justify-between gap-2 p-4 pb-2">
                        <h3 class="font-bold text-xl text-white">Notifications</h3>
                    </div>
                    <div class="text-sm h-[400px] w-full overflow-y-auto pr-2">
                        <div class="pl-2 p-1 text-sm font-normal text-white" id="notification-dropdown">
                            No notifications...
                        </div>
                    </div>
                </div>
                <div class="rounded-full relative bg-gray-800 cursor-pointer shrink-0">
                    <img src="~/images/avatar/user.png" class="sm:w-9 sm:h-9 w-7 h-7 rounded-full shadow shrink-0" />
                </div>
                <div class="hidden bg-gray-800 rounded-lg drop-shadow-xl w-64 border2" uk-drop="offset:6;pos: bottom-right;animate-out: true;">
                    <a>
                        <div class="p-4 py-5 flex items-center gap-4">
                            <img src="~/images/avatar/user.png" class="w-10 h-10 rounded-full shadow" />
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-white">Kalin Todorov</h4>
                                <div class="text-sm mt-1 text-blue-400 font-light">todorov03</div>
                            </div>
                        </div>
                    </a>
                    <hr class="border-slate-700" />
                    <nav>
                        <a>
                            <div class="flex items-center gap-2.5 hover:bg-gray-700 p-2 px-2.5 rounded-md">
                                <ion-icon name="settings-outline" class="text-lg text-white"></ion-icon>
                                <span class="text-white">My Account</span>
                            </div>
                        </a>
                        <hr class="border-slate-700" />
                        <a>
                            <div class="flex items-center gap-2.5 hover:bg-gray-700 p-2 px-2.5 rounded-md">
                                <ion-icon name="exit-outline" class="text-lg text-white"></ion-icon>
                                <span class="text-white">Log Out</span>
                            </div>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>
