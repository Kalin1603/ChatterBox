<div class="hidden lg:p-20" id="create-story" uk-modal="">
    <div class="uk-modal-dialog relative overflow-hidden mx-auto bg-white p-7 shadow-xl rounded-lg w-full max-w-lg">
        <div class="text-center py-3 border-b mb-0 dark:border-slate-700">
            <h2 class="text-sm font-medium text-black">Create story</h2>
            <button type="button" class="absolute top-0 right-0 m-2.5 uk-modal-close">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" class="w-6 h-6 text-gray-600">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M8 8.707l3.646 3.647.708-.707L8.707 8l3.647-3.646-.707-.708L8 7.293 4.354 3.646l-.707.708L7.293 8l-3.646 3.646.707.708L8 8.707z" />
                </svg>
            </button>
        </div>

        <div class="space-y-5 mt-7">
            <form asp-controller="Stories" asp-action="CreateStory" enctype="multipart/form-data">
                <div>
                    <div class="w-full h-72 relative border rounded-lg overflow-hidden bg-[url('../images/ad_pattern.png')] bg-repeat">
                        <label for="storyUpload" class="flex flex-col justify-center items-center absolute inset-0 z-10 cursor-pointer bg-gradient-to-t from-gray-700/60 opacity-75 hover:opacity-100 transition">
                            <input id="storyUpload" name="image" type="file" accept="image/png, image/jpeg" class="hidden" />
                            <ion-icon name="image" class="text-3xl text-teal-600"></ion-icon>
                            <span class="text-white mt-2">Browse to Upload image</span>
                        </label>
                        <img id="storyPreview" class="w-full h-full object-cover relative z-20" src="#" alt="Story Preview" style="display: none;" />
                    </div>
                </div>
                <div class="flex justify-between items-center">
                    <div class="flex items-start gap-2">
                        <ion-icon name="time-outline" class="text-3xl text-teal-600 rounded-full bg-blue-50 p-1"></ion-icon>
                        <p class="text-sm text-gray-500 font-medium">
                            Your story will be available <br />
                            for <span class="text-gray-800">24 Hours</span>
                        </p>
                    </div>
                    <button type="submit" class="bg-blue-500 text-white px-8 py-2 rounded hover:bg-blue-600 transition">Share</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('storyUpload').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('storyPreview');
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });
</script>