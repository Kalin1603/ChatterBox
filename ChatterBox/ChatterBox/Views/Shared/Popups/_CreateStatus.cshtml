<div class="hidden lg:p-20" id="create-status" uk-modal>
    <div class="uk-modal-dialog relative overflow-hidden mx-auto bg-white shadow-xl rounded-lg md:w-[520px] w-full">
        <div class="text-center py-4 border-b">
            <h2 class="text-sm font-medium text-black">Create Status</h2>
            <button type="button" class="absolute top-2 right-2 uk-modal-close">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <form class="p-4 space-y-5">
            <textarea class="w-full text-white placeholder-black-500 bg-gray-300 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200 text-lg p-3"
                      name="content" rows="3" placeholder="What do you have in mind?"></textarea>

            <div id="imagePreviewContainer" class="hidden">
                <img id="imagePreview" src="#" class="w-full h-auto rounded-lg" />
            </div>

            <div class="flex justify-between items-center">
                <input id="imageUpload" type="file" class="hidden" name="uploadContent" accept="image/png,image/jpeg" />
                <button type="button" id="imageUploadBtn" class="flex items-center gap-2 bg-sky-50 text-sky-600 rounded-full py-2 px-3 border border-sky-200 hover:bg-sky-100 transition">
                    <ion-icon name="image" class="text-lg"></ion-icon> Upload Image
                </button>

                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-6 text-sm font-medium rounded-lg transition">Create</button>
            </div>
        </form>
    </div>
</div>