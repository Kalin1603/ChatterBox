@model ChatterBox.ViewModels.UserViewModels.SuggestedUserViewModel

<div class="flex items-center bg-gray-700 p-4 rounded-lg transition-transform transform hover:scale-105 hover:bg-gray-600">
    <a href="@Url.Action("Details", "Profile", new { id = Model.User.Id })">
        <img src="@Model.User.ProfilePictureURL"
             class="w-12 h-12 rounded-full border-2 border-indigo-500"
             alt="User Avatar"
             onerror="this.src='/images/default-profile.png'" />
    </a>
    <div class="flex-1 ml-4">
        <a href="@Url.Action("Details", "Profile", new { id = Model.User.Id })">
            <h4 class="font-semibold text-white">@Model.User.FullName</h4>
        </a>
    </div>
    <form asp-action="Follow" asp-controller="Profile" method="post">
        <input type="hidden" name="followedUserId" value="@Model.User.Id" />
        <button type="submit"
                class="px-4 py-2 @(Model.IsFollowed ? "bg-red-500 hover:bg-red-600" : "bg-indigo-500 hover:bg-indigo-600")
                       text-white rounded-full transition duration-300">
            @(Model.IsFollowed ? "Unfollow" : "Follow")
        </button>
    </form>
</div>