@page
@model ChatterBox.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Forgot your password?";
}

<div class="sm:flex">
    <!-- Forgot Password Form -->
    <div class="relative lg:w-[580px] md:w-96 w-full p-10 min-h-screen bg-white shadow-xl flex items-center pt-10 z-10">
        <div class="w-full lg:max-w-sm mx-auto space-y-10">
            <div>
                <h2 class="text-2xl font-semibold mb-1.5 text-black">Reset Your Password</h2>
                <p class="text-sm text-black font-normal">
                    Enter your email address below and we'll send you a link to reset your password.
                </p>
            </div>
            <form method="post" class="space-y-7 text-sm text-black font-medium">
                <div asp-validation-summary="ModelOnly" class="col-span-2 text-red-500"></div>
                <div>
                    <label asp-for="Input.Email" class="block text-black">Email Address</label>
                    <div class="mt-2.5">
                        <input asp-for="Input.Email" placeholder="Enter your email" required
                               class="!w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-indigo-600 bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Reset Password
                    </button>
                </div>
                <div class="text-center">
                    <a asp-page="./Login" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Slider -->
    <div class="flex-1 relative bg-primary max-md:hidden">
        <div class="relative w-full h-full" tabindex="-1" uk-slideshow="animation: slide; autoplay: true; autoplay-interval: 5000;">
            <ul class="uk-slideshow-items w-full h-full">
                <li class="w-full">
                    <img src="~/images/welcome/welcome-01.png" alt="Welcome image 1" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 600,0,0">Connect with Friends</h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;">
                                Bridge the gap between miles and moments—connect with friends and weave memories together, one click at a time.
                            </p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
                <li class="w-full">
                    <img src="~/images/welcome/welcome-02.png" alt="Welcome image 2" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 800,0,0">Connect With Friends</h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;">
                                Rekindle old ties and spark new ones—your next 'Remember when...' moment is just a friend request away.
                            </p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
                <li class="w-full">
                    <img src="~/images/welcome/welcome-03.png" alt="Welcome image 2" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 800,0,0">Connect With Friends</h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;">
                                Rekindle old ties and spark new ones—your next 'Remember when...' moment is just a friend request away.
                            </p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
