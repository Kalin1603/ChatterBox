@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="flex min-h-screen items-center justify-center bg-gray-900 text-white">
    <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

        <form id="account" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium">Email or username</label>
                <input asp-for="Input.Email" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500" autocomplete="username" placeholder="name@example.com or username" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium">Password</label>
                <input asp-for="Input.Password" type="password" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500" autocomplete="current-password" placeholder="********" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="inline-flex items-center text-sm">
                    <input asp-for="Input.RememberMe" class="form-checkbox h-4 w-4 text-blue-600 bg-gray-700 border-gray-600 rounded" />
                    <span class="ml-2">Remember me</span>
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg transition">
                Log in
            </button>

            <p class="text-center text-sm">
                Don't have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-400 hover:underline">Sign up</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}