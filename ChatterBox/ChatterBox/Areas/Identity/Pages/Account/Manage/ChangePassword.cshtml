@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="min-h-screen bg-gray-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-gray-800/80 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden border border-gray-700/50">
        <div class="px-8 py-6 border-b border-gray-700/50">
            <h2 class="text-xl font-semibold text-white">🔒 @ViewData["Title"]</h2>
        </div>
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="px-8 py-6">
            <form id="change-password-form" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm" role="alert"></div>

                <div>
                    <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-300 mb-2">Current Password</label>
                    <input asp-for="Input.OldPassword" class="w-full bg-gray-700/50 border border-gray-600/50 rounded-lg px-4 py-3 text-gray-200 focus:ring-2 focus:ring-sky-500 focus:border-transparent" autocomplete="current-password" aria-required="true" placeholder="Enter your current password" />
                    <span asp-validation-for="Input.OldPassword" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-300 mb-2">New Password</label>
                    <input asp-for="Input.NewPassword" class="w-full bg-gray-700/50 border border-gray-600/50 rounded-lg px-4 py-3 text-gray-200 focus:ring-2 focus:ring-sky-500 focus:border-transparent" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                    <span asp-validation-for="Input.NewPassword" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-2">Confirm New Password</label>
                    <input asp-for="Input.ConfirmPassword" class="w-full bg-gray-700/50 border border-gray-600/50 rounded-lg px-4 py-3 text-gray-200 focus:ring-2 focus:ring-sky-500 focus:border-transparent" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div class="flex justify-between space-x-4">
                    <button type="button" onclick="history.back()" class="px-4 py-2 bg-gray-500 hover:bg-gray-400 text-white rounded-lg transition-colors duration-200 font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-gray-400">
                        Back
                    </button>
                    <button type="submit" class="px-6 py-3 bg-sky-600 hover:bg-sky-500 text-white rounded-lg transition-colors duration-200 font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-sky-500">
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}